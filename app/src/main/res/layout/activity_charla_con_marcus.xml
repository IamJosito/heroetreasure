<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".CharlaConMarcus">

    <TextView
        android:id="@+id/textoMarcus"
        android:layout_width="427dp"
        android:layout_height="208dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="224dp"
        android:background="@drawable/textobackground"
        android:fontFamily="@font/atma_medium"
        android:paddingLeft="90dp"
        android:paddingTop="50dp"
        android:paddingRight="80dp"
        android:paddingBottom="0dp"
        android:text="@string/txtMarcus1"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="272dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/myavatar" />

    <ImageButton
        android:id="@+id/btnSiguiente"
        android:layout_width="142dp"
        android:layout_height="188dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreEt"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
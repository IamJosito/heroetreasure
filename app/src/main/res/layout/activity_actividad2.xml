<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EscogerNombre"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/textoInicial"
        android:layout_width="354dp"
        android:layout_height="146dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/textobackground2"
        android:fontFamily="@font/atma_medium"
        android:paddingLeft="15dp"
        android:paddingTop="30dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:text="Hola joven Guerrero. \nEres nuevo?"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textoInicial2"
        android:layout_width="449dp"
        android:layout_height="118dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/textobackground"
        android:fontFamily="@font/atma_medium"
        android:paddingLeft="15dp"
        android:paddingTop="30dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:text="@string/txtEscogeNombre"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoInicial" />

    <EditText
        android:id="@+id/nombreEt"
        android:layout_width="222dp"
        android:layout_height="65dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="56dp"
        android:background="#5E472C"
        android:ems="10"
        android:fontFamily="@font/atma_medium"

        android:foregroundTint="#FFFFFF"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:paddingLeft="20px"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoInicial2" />

    <ImageButton
        android:id="@+id/btnSiguiente"
        android:layout_width="142dp"
        android:layout_height="188dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreEt"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>